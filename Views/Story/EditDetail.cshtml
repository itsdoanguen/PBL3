@using PBL3.ViewModels.Story
@using Microsoft.AspNetCore.Mvc.Localization
@model StoryEditViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EditStoryDetails"].Value;
    Layout = "~/Views/Shared/_StoryEditorLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container py-5">
    <div class="row mb-4 align-items-center">
        <div class="col-md-3 text-center">
            <img src="@Model.CoverImage" class="img-fluid rounded shadow-sm" alt="Cover Image" style="max-height: 280px;">
        </div>
        <div class="col-md-9">
            <h2>@Model.Title</h2>

            <!-- Trạng thái -->
            <p class="mt-2">
                <strong>@Localizer["Status"]:</strong>
                @if (Model.StoryStatus == PBL3.Models.StoryModel.StoryStatus.Active)
                {
                    <span class="badge bg-success">@Localizer["Published"]</span>
                }
                else if (Model.StoryStatus == PBL3.Models.StoryModel.StoryStatus.Inactive)
                {
                    <span class="badge bg-secondary">@Localizer["Draft"]</span>
                }
                else if (Model.StoryStatus == PBL3.Models.StoryModel.StoryStatus.Completed)
                {
                    <span class="badge bg-primary">@Localizer["Completed"]</span>
                }
                else if (Model.StoryStatus == PBL3.Models.StoryModel.StoryStatus.Locked)
                {
                    <span class="badge bg-danger">@Localizer["Locked"]</span>
                }
                else if (Model.StoryStatus == PBL3.Models.StoryModel.StoryStatus.ReviewPending)
                {
                    <span class="badge bg-warning text-dark">@Localizer["PendingReview"]</span>
                }
            </p>

            <p>@Model.Description</p>

            <!-- Thể loại -->
            @if (Model.AvailableGenres != null && Model.GenreIDs != null)
            {
                <div class="mt-2">
                    @foreach (var genre in Model.AvailableGenres.Where(g => Model.GenreIDs.Contains(g.GenreID)))
                    {
                        <span class="genre-badge">@genre.Name</span>
                    }
                </div>
            }

            <!-- Thống kê -->
            <div class="d-flex flex-wrap gap-2 mt-3">
                <span class="badge-modern">👍 @Localizer["Likes"]: @Model.TotalLike</span>
                <span class="badge-modern">🔖 @Localizer["Bookmarks"]: @Model.TotalBookmark</span>
                <span class="badge-modern">💬 @Localizer["Comments"]: @Model.TotalComment</span>
                <span class="badge-modern">📖 @Localizer["Chapters"]: @Model.TotalChapter</span>
                <span class="badge-modern">👁️ @Localizer["Views"]: @Model.TotalView</span>
            </div>

            <div class="mt-4 d-flex gap-3">
                <a asp-controller="Story" asp-action="Edit" asp-route-id="@Model.StoryID" class="btn btn-outline-dark btn-modern">✏️ @Localizer["EditStory"]</a>

                <form asp-action="Delete" asp-controller="Story" method="post" style="display:inline;">
                    <input type="hidden" name="StoryID" value="@Model.StoryID" />
                    <button type="submit" class="btn btn-outline-danger btn-modern" onclick="return confirm('@Localizer["DeleteConfirm"]');">🗑️ @Localizer["DeleteStory"]</button>
                </form>

                @if (Model.StoryStatus == PBL3.Models.StoryModel.StoryStatus.Active)
                {
                    <form asp-action="UpdateStatus" asp-controller="Story" method="post" onsubmit="return confirm('@Localizer["MoveToDraftConfirm"]');" style="display:inline;">
                        <input type="hidden" name="StoryID" value="@Model.StoryID" />
                        <input type="hidden" name="NewStatus" value="Inactive" />
                        <button type="submit" class="btn btn-warning btn-modern">📝 @Localizer["MoveToDraft"]</button>
                    </form>

                    <form asp-action="UpdateStatus" asp-controller="Story" method="post" onsubmit="return confirm('@Localizer["MarkCompletedConfirm"]');" style="display:inline;">
                        <input type="hidden" name="StoryID" value="@Model.StoryID" />
                        <input type="hidden" name="NewStatus" value="Completed" />
                        <button type="submit" class="btn btn-primary btn-modern">✅ @Localizer["MarkAsCompleted"]</button>
                    </form>
                }
                else if (Model.StoryStatus == PBL3.Models.StoryModel.StoryStatus.Inactive)
                {
                    <form asp-action="UpdateStatus" asp-controller="Story" method="post" onsubmit="return confirm('@Localizer["PublishConfirm"]');">
                        <input type="hidden" name="StoryID" value="@Model.StoryID" />
                        <input type="hidden" name="NewStatus" value="Active" />
                        <button type="submit" class="btn btn-success btn-modern">🚀 @Localizer["Publish"]</button>
                    </form>
                }
                else if (Model.StoryStatus == PBL3.Models.StoryModel.StoryStatus.Completed)
                {
                    <form asp-action="UpdateStatus" asp-controller="Story" method="post" onsubmit="return confirm('@Localizer["PublishConfirm"]');" style="display:inline;">
                        <input type="hidden" name="StoryID" value="@Model.StoryID" />
                        <input type="hidden" name="NewStatus" value="Active" />
                        <button type="submit" class="btn btn-success btn-modern">🔄 @Localizer["MoveToPublishing"]</button>
                    </form>
                }
                else if (Model.StoryStatus == PBL3.Models.StoryModel.StoryStatus.Locked)
                {
                    <form asp-action="PendingReview" asp-controller="Story" method="post" onsubmit="return confirm('@Localizer["RequestReviewConfirm"]');">
                        <input type="hidden" name="storyId" value="@Model.StoryID" />
                        <button type="submit" class="btn btn-info btn-modern">🔄 @Localizer["RequestReview"]</button>
                    </form>
                }
            </div>
        </div>
    </div>

    <hr />

    <!-- Chapters -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>📚 @Localizer["Chapters"]</h3>
        <button id="toggleAddChapter" type="button" class="btn btn-dark btn-modern">➕ @Localizer["AddChapter"]</button>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered chapter-table">
            <thead>
                <tr>
                    <th style="width: 80px;">#</th>
                    <th>@Localizer["Title"]</th>
                    <th style="width: 110px">@Localizer["CreatedDate"]</th>
                    <th style="width: 110px">@Localizer["UpdatedDate"]</th>
                    <th style="width: 110px">@Localizer["Views"]</th>
                    <th style="width: 90px">@Localizer["Order"]</th>
                    <th style="width: 110px">@Localizer["Status"]</th>
                    <th style="width: 170px">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody id="chapterTableBody">
                <!-- Inline Add Chapter Row -->
                <tr id="inlineChapterForm" style="display: none;">
                    <form id="createChapterForm" asp-controller="Chapter" asp-action="CreateChapter" method="post">
                        <input type="hidden" name="StoryID" value="@Model.StoryID" />
                        <td>-</td>
                        <td><input type="text" name="Title" class="form-control" placeholder="@Localizer["EnterChapterTitle"]" required /></td>
                        <td>-</td>
                        <td>-</td>
                        <td>0</td>
                        <td>-</td>
                        <td>
                            <button type="submit" class="btn btn-sm btn-dark btn-modern">@Localizer["Save"]</button>
                            <button type="button" id="cancelAddChapter" class="btn btn-sm btn-secondary btn-modern">@Localizer["Cancel"]</button>
                        </td>
                    </form>
                </tr>

                @if (Model.Chapters != null && Model.Chapters.Any())
                {
                    int index = 1;
                    foreach (var chapter in Model.Chapters.OrderBy(c => c.ChapterOrder))
                    {
                        var rowClass = chapter.Status == PBL3.ViewModels.Chapter.ChapterSummaryViewModel.ChapterStatus.Inactive ? "table-secondary text-muted" : "";

                        <tr class="@rowClass">
                            <td>@index</td>
                            <td>@chapter.Title</td>
                            <td>@chapter.CreatedAt.ToString("yyyy-MM-dd")</td>
                            <td>@(chapter.UpdatedAt?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                            <td>@chapter.ViewCount</td>
                            <td>
                                <span class="chapter-order-value">@chapter.ChapterOrder</span>
                                @if (chapter.Status == PBL3.ViewModels.Chapter.ChapterSummaryViewModel.ChapterStatus.Active)
                                {
                                    <button type="button" class="btn btn-link btn-sm p-0 ms-1 edit-order-btn" data-bs-toggle="modal" data-bs-target="#orderModal-@chapter.ChapterID" title="@Localizer["EditOrder"]"><i class="bi bi-gear"></i></button>
                                    <!-- Modal đổi thứ tự chương -->
                                    <div class="modal fade" id="orderModal-@chapter.ChapterID" tabindex="-1" aria-labelledby="orderModalLabel-@chapter.ChapterID" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <form asp-action="UpdateChapterOrder" asp-controller="Chapter" method="post">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="orderModalLabel-@chapter.ChapterID">@Localizer["ChangeChapterOrder"]</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <input type="hidden" name="chapterId" value="@chapter.ChapterID" />
                                                        <input type="hidden" name="storyId" value="@Model.StoryID" />
                                                        <div class="mb-3">
                                                            <label for="newOrder-@chapter.ChapterID" class="form-label">@Localizer["NewOrder"]</label>
                                                            <input type="number" name="newOrder" id="newOrder-@chapter.ChapterID" min="1" max="@Model.Chapters.Count" value="@chapter.ChapterOrder" class="form-control" required />
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                                                        <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </td>
                            <td>
                                @if (chapter.Status == PBL3.ViewModels.Chapter.ChapterSummaryViewModel.ChapterStatus.Inactive)
                                {
                                    <span class="badge bg-secondary">@Localizer["Draft"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@Localizer["Published"]</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("EditChapter", "Chapter", new { chapterId = chapter.ChapterID, storyId = Model.StoryID })"
                                   class="btn btn-sm btn-outline-dark btn-modern">
                                    ✏️ @Localizer["Edit"]
                                </a>

                                <form asp-action="DeleteChapter" asp-controller="Chapter" method="post" style="display:inline;">
                                    <input type="hidden" name="chapterID" value="@chapter.ChapterID" />
                                    <input type="hidden" name="storyID" value="@Model.StoryID" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger btn-modern" onclick="return confirm('@Localizer["DeleteChapterConfirm"]');">🗑️</button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">@Localizer["NoChapters"]</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/story-editdetail.css" asp-append-version="true" />
}
@section Scripts {
    <script src="~/js/story-editdetail.js" asp-append-version="true"></script>
}
