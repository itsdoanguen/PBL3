@model PBL3.ViewModels.User.IntroViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Giới thiệu";
}
@section css {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/StyleSheet.css" rel="stylesheet">
}
<div class="bg-light header-bottom">
    <div class="container py-1">
        <p class="mb-0">
            @Model.HeaderMessage
        </p>
    </div>
</div>

<main>
    <div class="section-stories-hot mb-3">
        <div class="container">
            <div class="row">
                <div class="head-title-global d-flex justify-content-between mb-2">
                    <div class="col-6 col-md-4 col-lg-4 head-title-global__left d-flex align-items-center">
                        <h2 class="me-2 mb-0 border-bottom border-secondary pb-1">
                            <a href="#" class="d-block text-decoration-none text-dark fs-4 story-name"
                               title="Truyện Hot">Truyện Hot</a>
                        </h2>
                        <i class="fa-solid fa-fire-flame-curved"></i>
                    </div>

                    <div class="col-4 col-md-3 col-lg-2">
                        <select class="form-select select-stories-hot" id="categoryFilter" asp-items="@Model.CategorySelectList">
                            <option value="0" selected>Tất cả</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="section-stories-hot__list" id="hotStoriesContainer">
                        @foreach (var story in Model.HotStories)
                        {
                            <div class="story-item">
                                <a asp-controller="Story" asp-action="Details" asp-route-id="@story.Id" class="d-block text-decoration-none">
                                    <div class="story-item__image">
                                        <img src="@story.CoverImageUrl" alt="@story.Title" class="img-fluid" width="150"
                                             height="230" loading="lazy">
                                    </div>
                                    <h3 class="story-item__name text-one-row story-name">@story.Title</h3>

                                    <div class="list-badge">
                                        @if (story.IsCompleted)
                                        {
                                            <span class="story-item__badge badge text-bg-success">Full</span>
                                        }

                                        @if (story.IsHot)
                                        {
                                            <span class="story-item__badge story-item__badge-hot badge text-bg-danger">Hot</span>
                                        }

                                        @if (story.IsNew)
                                        {
                                            <span class="story-item__badge story-item__badge-new badge text-bg-info text-light">New</span>
                                        }
                                    </div>
                                </a>
                            </div>
                        }
                    </div>

                    <div class="section-stories-hot__list wrapper-skeleton d-none">
                        @for (int i = 0; i < 16; i++)
                        {
                            <div class="skeleton" style="max-width: 150px; width: 100%; height: 230px;"></div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row align-items-start">
            <div class="col-12 col-md-8 col-lg-9">
                <div class="section-stories-new mb-3">
                    <div class="row">
                        <div class="head-title-global d-flex justify-content-between mb-2">
                            <div class="col-6 col-md-4 col-lg-4 head-title-global__left d-flex align-items-center">
                                <h2 class="me-2 mb-0 border-bottom border-secondary pb-1">
                                    <a href="#"
                                       class="d-block text-decoration-none text-dark fs-4 story-name"
                                       title="Truyện Mới">Truyện Mới</a>
                                </h2>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="section-stories-new__list">
                                @foreach (var story in Model.NewStories)
                                {
                                    <div class="story-item-no-image">
                                        <div class="story-item-no-image__name d-flex align-items-center">
                                            <h3 class="me-1 mb-0 d-flex align-items-center">
                                                <svg style="width: 10px; margin-right: 5px;"
                                                     xmlns="http://www.w3.org/2000/svg" height="1em"
                                                     viewBox="0 0 320 512">
                                                    <path d="M278.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L210.7 256 73.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z">
                                                    </path>
                                                </svg>
                                                <a asp-controller="Story" asp-action="Details" asp-route-id="@story.Id"
                                                   class="text-decoration-none text-dark fs-6 hover-title text-one-row story-name">
                                                    @story.Title
                                                </a>
                                            </h3>
                                            @if (story.IsNew)
                                            {
                                                <span class="badge text-bg-info text-light me-1">New</span>
                                            }

                                            @if (story.IsCompleted)
                                            {
                                                <span class="badge text-bg-success text-light me-1">Full</span>
                                            }

                                            @if (story.IsHot)
                                            {
                                                <span class="badge text-bg-danger text-light">Hot</span>
                                            }
                                        </div>

                                        <div class="story-item-no-image__categories ms-2 d-none d-lg-block">
                                            <p class="mb-0">
                                                @foreach (var category in story.Categories)
                                                {
                                                    <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id"
                                                       class="hover-title text-decoration-none text-dark category-name">
                                                        @category.Name@(category != story.Categories.Last() ? "," : "")
                                                    </a>
                                                }
                                            </p>
                                        </div>

                                        <div class="story-item-no-image__chapters ms-2">
                                            <a asp-controller="Chapter" asp-action="Details" asp-route-id="@story.LatestChapter?.Id" class="hover-title text-decoration-none text-info">
                                                Chương @story.LatestChapter?.ChapterNumber
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4 col-lg-3 sticky-md-top">
                <div class="row">
                    <div class="col-12">
                        <div class="section-list-category bg-light p-2 rounded card-custom">
                            <div class="head-title-global mb-2">
                                <div class="col-12 col-md-12 head-title-global__left">
                                    <h2 class="mb-0 border-bottom border-secondary pb-1">
                                        <span href="#" class="d-block text-decoration-none text-dark fs-4"
                                              title="Thể loại truyện">Thể loại truyện</span>
                                    </h2>
                                </div>
                            </div>
                            <div class="row">
                                <ul class="list-category">
                                    @foreach (var category in Model.AllCategories)
                                    {
                                        <li class="">
                                            <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" 
                                               class="text-decoration-none text-dark hover-title">@category.Name</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="section-stories-full mb-3 mt-3">
        <div class="container">
            <div class="row">
                <div class="head-title-global d-flex justify-content-between mb-2">
                    <div class="col-12 col-md-4 head-title-global__left d-flex">
                        <h2 class="me-2 mb-0 border-bottom border-secondary pb-1">
                            <span class="d-block text-decoration-none text-dark fs-4 title-head-name"
                                  title="Truyện đã hoàn thành">Truyện đã hoàn thành</span>
                        </h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="section-stories-full__list">
                        @foreach (var story in Model.CompletedStories)
                        {
                            <div class="story-item-full text-center">
                                <a asp-controller="Story" asp-action="Details" asp-route-id="@story.Id" class="d-block story-item-full__image">
                                    <img src="@story.CoverImageUrl" alt="@story.Title" class="img-fluid w-100"
                                         width="150" height="230" loading="lazy">
                                </a>
                                <h3 class="fs-6 story-item-full__name fw-bold text-center mb-0">
                                    <a asp-controller="Story" asp-action="Details" asp-route-id="@story.Id"
                                       class="text-decoration-none text-one-row story-name">
                                        @story.Title
                                    </a>
                                </h3>
                                <span class="story-item-full__badge badge text-bg-success">Full - @story.ChapterCount chương</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Filter hot stories by category
            $('#categoryFilter').change(function () {
                const categoryId = $(this).val();
                
                // Show loading skeleton
                $('#hotStoriesContainer').addClass('d-none');
                $('.wrapper-skeleton').removeClass('d-none');
                
                // Ajax call to get filtered stories
                $.ajax({
                    url: '@Url.Action("GetHotStoriesByCategory", "User")',
                    type: 'GET',
                    data: { categoryId: categoryId },
                    success: function (data) {
                        // Hide skeleton and show results
                        $('.wrapper-skeleton').addClass('d-none');
                        $('#hotStoriesContainer').html(data).removeClass('d-none');
                    },
                    error: function () {
                        // Handle error
                        $('.wrapper-skeleton').addClass('d-none');
                        $('#hotStoriesContainer').removeClass('d-none');
                        alert('Đã xảy ra lỗi khi tải dữ liệu.');
                    }
                });
            });
        });
    </script>
} 