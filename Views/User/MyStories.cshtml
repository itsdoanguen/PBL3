@model IEnumerable<PBL3.ViewModels.UserStoryCardViewModel>
@{
	Layout = "~/Views/Shared/_UserLayout.cshtml";
	ViewData["Title"] = "Truyện của tôi";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Truyện của tôi</h2>
        <a class="btn btn-success" asp-controller="Story" asp-action="Create">Viết truyện mới</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Bạn chưa có truyện nào! Hãy bắt đầu sáng tác ngay.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var story in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100 border-0 rounded-3">
                        <img src="@story.Cover" class="card-img-top rounded-top" alt="@story.Title">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@story.Title</h5>
                            <p class="card-text text-muted">Cập nhật: @(story.LastUpdated?.ToString("dd/MM/yyyy") ?? "Chưa có cập nhật")</p>

                            <p class="card-text">Trạng thái: <strong>@story.Status</strong></p>
                            <p class="card-text">Chương: @story.TotalChapters</p>
                            <div class="mt-auto">
                                <a href="/Story/Edit/@story.StoryID" class="btn btn-primary btn-sm">Chỉnh sửa</a>
                                <a href="/Story/Details/@story.StoryID" class="btn btn-outline-secondary btn-sm">Xem</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
