@model PBL3.ViewModels.Account.ForgotPasswordViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ForgotPassword"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5 mt-5">
    <h2 class="mb-4 text-center">@Localizer["ForgotPassword"]</h2>
    <form method="post" asp-action="ForgotPassword" class="mx-auto" style="max-width: 420px;">
        <div class="mb-3">
            <label for="email" class="form-label">@Localizer["EnterRegisteredEmail"]</label>
            <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required autocomplete="email" />
        </div>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
        <button type="submit" class="btn btn-primary w-100">@Localizer["SendNewPassword"]</button>
    </form>
</div>
