@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["AccountSettings"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5">
    <div class="settings-card mx-auto">
        <h2 class="settings-title mb-4">@Localizer["AccountSettings"]</h2>
        <div class="settings-options">
            <a asp-action="EditProfile" asp-controller="User" class="settings-option">
                <i class="bi bi-person-circle"></i>
                <span>@Localizer["EditProfile"]</span>
            </a>
            <a asp-action="ChangePassword" asp-controller="User" class="settings-option">
                <i class="bi bi-key"></i>
                <span>@Localizer["ChangePassword"]</span>
            </a>
            <a asp-action="ForgotPassword" asp-controller="User" class="settings-option">
                <i class="bi bi-envelope-arrow-up"></i>
                <span>@Localizer["ForgotPassword"]</span>
            </a>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/user-settings.css" />
}
@section Scripts {
    <script src="~/js/user-settings.js"></script>
}
