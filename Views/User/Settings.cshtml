@{
    ViewData["Title"] = "Cài đặt tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5">
    <div class="settings-card mx-auto">
        <h2 class="settings-title mb-4">Cài đặt tài khoản</h2>
        <div class="settings-options">
            <a asp-action="EditProfile" asp-controller="User" class="settings-option">
                <i class="bi bi-person-circle"></i>
                <span>Chỉnh sửa hồ sơ</span>
            </a>
            <a asp-action="ChangePassword" asp-controller="User" class="settings-option">
                <i class="bi bi-key"></i>
                <span>Đổi mật khẩu</span>
            </a>
            <a asp-action="ForgotPassword" asp-controller="User" class="settings-option">
                <i class="bi bi-envelope-arrow-up"></i>
                <span>Quên mật khẩu</span>
            </a>
        </div>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/user-settings.css" />
}
@section Scripts {
    <script src="~/js/user-settings.js"></script>
}
