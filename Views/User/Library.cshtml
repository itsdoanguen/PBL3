@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["Library"];
}
<link rel="stylesheet" href="~/css/user-library.css" asp-append-version="true" />
<div class="container py-5 user-library-container mt-5">
    <h2 class="mb-4 text-center">@Localizer["MyLibrary"]</h2>
    <div class="row justify-content-center g-4 flex-column align-items-center">
        <div class="col-12 mb-4">
            <a href="@Url.Action("Bookmarks", "User")" class="library-card library-card-vertical">
                <div class="library-card-icon bg-primary text-white">
                    <i class="bi bi-bookmark-star"></i>
                </div>
                <div>
                    <h4 class="mb-1">@Localizer["SavedStories"]</h4>
                    <p class="mb-0 text-muted">@Localizer["ViewBookmarkedStories"]</p>
                </div>
            </a>
        </div>
        <div class="col-12 mb-4">
            <a href="@Url.Action("FollowStories", "User")" class="library-card library-card-vertical">
                <div class="library-card-icon bg-success text-white">
                    <i class="bi bi-heart"></i>
                </div>
                <div>
                    <h4 class="mb-1">@Localizer["FollowedStories"]</h4>
                    <p class="mb-0 text-muted">@Localizer["ViewFollowedStoriesUpdates"]</p>
                </div>
            </a>
        </div>
        <div class="col-12 mb-4">
            <a href="@Url.Action("LibraryFollow", "User")" class="library-card library-card-vertical">
                <div class="library-card-icon bg-info text-white">
                    <i class="bi bi-people"></i>
                </div>
                <div>
                    <h4 class="mb-1">@Localizer["Follow"]</h4>
                    <p class="mb-0 text-muted">@Localizer["ManageFollowersAndFollowing"]</p>
                </div>
            </a>
        </div>
        <div class="col-12 mb-4">
            <a href="@Url.Action("LikedChapters", "LikeChapter")" class="library-card library-card-vertical">
                <div class="library-card-icon bg-warning text-white">
                    <i class="bi bi-hand-thumbs-up"></i>
                </div>
                <div>
                    <h4 class="mb-1">@Localizer["LikedChapters"]</h4>
                    <p class="mb-0 text-muted">@Localizer["ViewLikedChaptersGroupedByStory"]</p>
                </div>
            </a>
        </div>
    </div>
</div>
