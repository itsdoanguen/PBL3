@model List<PBL3.ViewModels.Admin.StoryInfo>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="table-responsive">
    <table class="table table-bordered table-hover story-table">
        <thead class="table-light">
            <tr>
                <th>@Localizer["#"].Value</th>
                <th>@Localizer["Story Name"].Value</th>
                <th>@Localizer["Author"].Value</th>
                <th>@Localizer["Chapters"].Value</th>
                <th>@Localizer["Status"].Value</th>
                <th>@Localizer["Details"].Value</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].Author</td>
                    <td>@Model[i].ChapterCount</td>
                    <td>
                        @if(Model[i].Status == PBL3.Models.StoryModel.StoryStatus.Active.ToString())
                        {
                            <span class="badge bg-success">@Localizer["Active"]</span>
                        }
                        else if (Model[i].Status == PBL3.Models.StoryModel.StoryStatus.Completed.ToString())
                        {
                            <span class="badge bg-secondary">@Localizer["Completed"]</span>
                        }
                        else if (Model[i].Status == PBL3.Models.StoryModel.StoryStatus.Locked.ToString())
                        {
                            <span class="badge bg-danger">@Localizer["Locked"]</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">@Localizer["Pending"]</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-detail" href="@Url.Action("ViewStory", "Moderator", new { id = Model[i].Id })">@Localizer["Details"]</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav>
        <ul class="pagination justify-content-center"></ul>
    </nav>
</div>
