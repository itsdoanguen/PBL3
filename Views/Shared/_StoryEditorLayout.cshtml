<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
	<style>
		.editor-container {
			max-width: 800px;
			margin: auto;
			padding-top: 20px;
		}

		/* Hiệu ứng hover cho nút hủy */
		.btn-cancel {
			transition: all 0.3s ease-in-out;
		}

			.btn-cancel:hover {
				background-color: #dc3545;
				color: white;
			}
	</style>
</head>
<body>
	<div class="container-fluid px-5 mt-4">
		<div class="d-flex justify-content-between mb-3">
			<a href="javascript:history.back()" class="btn btn-outline-danger btn-cancel">
				<i class="bi bi-arrow-left"></i> Quay lại
			</a>
		</div>
		@RenderBody()
	</div>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.unobtrusive-ajax/3.2.6/jquery.unobtrusive-ajax.min.js"></script>

	@RenderSection("Scripts", required: false);
</body>
</html>
