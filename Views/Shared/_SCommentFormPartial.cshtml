@model PBL3.ViewModels.Story.CommentFormViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<form asp-action="Post" asp-controller="Comment" method="post" class="comment-form mb-4">
    @Html.AntiForgeryToken()
    <input type="hidden" name="StoryID" value="@Model.StoryID" />
    <input type="hidden" name="UserID" value="@Model.UserID" />
    <input type="hidden" name="ParentCommentID" id="parentCommentInput-@Model.FormId" value="@Model.ParentCommentID" />
    <input type="hidden" name="Type" value="@Model.Type" />

    @if (!string.IsNullOrEmpty(Model.ReplyingToUsername))
    {
        <small class="text-muted">@Localizer["ReplyingTo"] <span id="replyingToDisplay-@Model.FormId">@Model.ReplyingToUsername</span></small>
    }

    <div class="mb-3 mt-2">
        <textarea name="Content" rows="3" class="form-control" placeholder="@Localizer["WriteCommentPlaceholder"]"></textarea>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <button type="submit" class="btn btn-primary">@Localizer["SubmitComment"]</button>
        @if (Model.ParentCommentID != null && Model.ParentCommentID > 0)
        {
            <button type="button" class="btn btn-link" id="cancelReplyBtn-@Model.FormId" onclick="cancelReply(@Model.FormId)">@Localizer["CancelReply"]</button>
        }
    </div>
</form>