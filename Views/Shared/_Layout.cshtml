@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

	<!-- Custom CSS -->
	<link href="~/css/site.css" rel="stylesheet">
	@RenderSection("css", required: false)
	@RenderSection("Styles", required: false)
	<!-- Font Awesome -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" type="text/css">

	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100" style="background-color: var(--pastel-bg);">
	<!-- Header -->
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-custom fixed-top">
			<div class="container">
				<!-- Logo -->
				@if (User.Identity.IsAuthenticated)
				{
					<a class="navbar-brand d-flex align-items-center" asp-controller="User" asp-action="Index">
						<img src="~/image/logo.png" alt="Logo" width="40" height="40" class="me-2">
					</a>
				}
				else
				{
					<a class="navbar-brand d-flex align-items-center" asp-controller="Authentication" asp-action="Index">
						<img src="~/image/logo.png" alt="Logo" width="40" height="40" class="me-2">
					</a>
				}
				<!-- Language Switcher -->
				<form method="post" asp-controller="Language" asp-action="SetLanguage" class="d-flex align-items-center ms-3">
					@Html.AntiForgeryToken()
					<input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
					<select name="culture" class="form-select form-select-sm" onchange="this.form.submit()" style="width: 110px;">
						<option value="vi-VN" selected="@(System.Threading.Thread.CurrentThread.CurrentUICulture.Name == "vi-VN")">Tiếng Việt</option>
						<option value="en-US" selected="@(System.Threading.Thread.CurrentThread.CurrentUICulture.Name == "en-US")">English</option>
					</select>
				</form>
				<!-- Mobile Toggle -->
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
					<span class="navbar-toggler-icon"></span>
				</button>

				<!-- Main Navigation -->
				<div class="collapse navbar-collapse" id="navbarMain">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link" asp-controller="User" asp-action="Index">@Localizer["Discover"]</a>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link" asp-controller="Authentication" asp-action="Login">@Localizer["Discover"]</a>
							</li>
						}
					</ul>

					<!-- Management and User Section -->
					<ul class="navbar-nav ms-auto d-flex align-items-center">
						<!-- Search Form -->
						<li class="nav-item d-flex align-items-center me-2">
							@if (User.Identity.IsAuthenticated)
							{
								<form class="d-flex header_form-search" method="get" action="/Util/Search" style="max-width: 260px;">
									<div class="input-group">
										<input type="text" class="form-control" name="tenTruyen" placeholder="@Localizer["Search"]" aria-label="@Localizer["Search"]" style="min-width: 120px; border-radius: 25px 0 0 25px !important;">
										<button class="btn" type="submit" style="border-radius: 0 25px 25px 0 !important;">
											<svg xmlns="http://www.w3.org/2000/svg" height="1em"
												 viewBox="0 0 512 512" style="fill: #666;">
												<path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z">
												</path>
											</svg>
										</button>
									</div>
								</form>
							}
							else
							{
								<div class="d-flex header_form-search">
									<div class="input-group">
										<input type="search" class="form-control" placeholder="@Localizer["SearchPlaceholder"]" readonly style="border-radius: 25px 0 0 25px !important;">
										<a class="btn" asp-controller="Authentication" asp-action="Login" style="border-radius: 0 25px 25px 0 !important;">
											<svg xmlns="http://www.w3.org/2000/svg" height="1em"
												 viewBox="0 0 512 512" style="fill: #666;">
												<path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z">
												</path>
											</svg>
										</a>
									</div>
								</div>
							}
						</li>

						<!-- Notification Button -->
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item d-flex align-items-center me-2">
								<a class="nav-link notification-btn position-relative d-flex align-items-center" asp-controller="Notification" asp-action="Index" title="@Localizer["Notifications"]">
									<i class="fas fa-bell text-light" style="font-size: 1.2rem;"></i>
									<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger notification-badge" id="notificationCount" style="font-size: 0.7rem; display: none;">
										0
									</span>
								</a>
							</li>
						}
						<!-- Quản lí nút cho Admin và Moderator -->
						@if (User.IsInRole("Moderator") || User.IsInRole("Admin"))
						{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-warning fw-bold" href="#" data-bs-toggle="dropdown">
									<i class="bi bi-shield-lock me-1" style="font-size:1.2rem;"></i>
									<span class="d-none d-lg-inline">@Localizer["Management"]</span>
								</a>
								<ul class="dropdown-menu dropdown-menu-dark-custom dropdown-menu-end">
									<li>
										<a class="dropdown-item dropdown-item-dark" asp-controller="Moderator" asp-action="Index">
											<i class="fas fa-cog me-2"></i>@Localizer["ContentManagement"]
										</a>
									</li>
									@if (User.IsInRole("Admin"))
									{
										<li><hr class="dropdown-divider"></li>
										<li>
											<a class="dropdown-item dropdown-item-dark" asp-controller="Admin" asp-action="Dashboard">
												<i class="fas fa-tools me-2"></i>@Localizer["SystemManagement"]
											</a>
										</li>
									}
								</ul>
							</li>
						}
						<!-- User Menu hoặc Login/Register buttons -->
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
									<img src="~/image/default-avatar.png" alt="Avatar" class="rounded-circle me-2" width="32">
									<span class="text-light">@User.Identity.Name</span>
								</a>
								<ul class="dropdown-menu dropdown-menu-dark-custom dropdown-menu-end">
									<li>
										<a class="dropdown-item dropdown-item-dark" asp-controller="User" asp-action="MyProfile">
											<i class="fas fa-user me-2"></i>@Localizer["Profile"]
										</a>
									</li>
									<li>
										<a class="dropdown-item dropdown-item-dark" asp-controller="User" asp-action="MyStories">
											<i class="fas fa-book me-2"></i>@Localizer["MyStories"]
										</a>
									</li>
									<li>
										<a class="dropdown-item dropdown-item-dark" asp-controller="History" asp-action="Index">
											<i class="fas fa-history me-2"></i>@Localizer["History"]
										</a>
									</li>
									<li>
										<a class="dropdown-item dropdown-item-dark" asp-controller="User" asp-action="Library">
											<i class="fas fa-bookmark me-2"></i>@Localizer["Library"]
										</a>
									</li>
									<li>
										<a class="dropdown-item dropdown-item-dark" asp-controller="Notification" asp-action="Index">
											<i class="fas fa-bell me-2"></i>@Localizer["Notifications"]
										</a>
									</li>
									<li>
										<a class="dropdown-item dropdown-item-dark" asp-controller="User" asp-action="Settings">
											<i class="fas fa-cog me-2"></i>@Localizer["Settings"]
										</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a class="dropdown-item dropdown-item-dark" asp-controller="Authentication" asp-action="Logout">
											<i class="fas fa-sign-out-alt me-2"></i>@Localizer["Logout"]
										</a>
									</li>
								</ul>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="btn btn-dark-custom me-2" asp-controller="Authentication" asp-action="Login">
									<i class="fas fa-sign-in-alt me-1"></i>@Localizer["Login"]
								</a>
							</li>
							<li class="nav-item">
								<a class="btn btn-outline-light" asp-controller="Authentication" asp-action="Register">
									<i class="fas fa-user-plus me-1"></i>@Localizer["Register"]
								</a>
							</li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<!-- Main Content -->
	<main class="flex-grow-1 pt-5 mb-5">
		<!-- Notifications -->
		<div class="container">
			@if (TempData["SuccessMessage"] != null)
			{
				<div class="mt-5 alert alert-success alert-dismissible fade show" role="alert">
					<i class="fas fa-check-circle me-2"></i>
					@TempData["SuccessMessage"]
					<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				</div>
			}
			@if (TempData["ErrorMessage"] != null)
			{
				<div class="mt-5 alert alert-danger alert-dismissible fade show" role="alert">
					<i class="fas fa-exclamation-circle me-2"></i>
					@TempData["ErrorMessage"]
					<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
				</div>
			}
		</div>

		<!-- Content Area -->
		<div class="container mt-2">
			@if (IsSectionDefined("Sidebar"))
			{
				<div class="row g-4">
					<div class="col-lg-3">
						<div class="card shadow-sm">
							@RenderSection("Sidebar", required: false)
						</div>
					</div>
					<div class="col-lg-9">
						<div class="card shadow-sm">
							@RenderBody()
						</div>
					</div>
				</div>
			}
			else
			{
				@RenderBody()
			}
		</div>
	</main>

	<!-- Footer -->
	<footer class="footer mt-auto py-4" style="background-color: var(--dark-primary);">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-md-6 text-center text-md-start">
					<p class="mb-0 text-light">
						<i class="fas fa-book me-2"></i>
						@Localizer["Copyright"] &copy; @DateTime.Now.Year - Reading Hub
					</p>
				</div>
				<div class="col-md-6">
					<ul class="list-inline text-center text-md-end mb-0">
						<li class="list-inline-item">
							<a asp-controller="Authentication" asp-action="Login" class="text-light text-decoration-none">
								<i class="fas fa-shield-alt me-1"></i>@Localizer["Policy"]
							</a>
						</li>
						<li class="list-inline-item ms-3">
							<a asp-controller="Authentication" asp-action="Login" class="text-light text-decoration-none">
								<i class="fas fa-envelope me-1"></i>@Localizer["Contact"]
							</a>
						</li>
						<li class="list-inline-item ms-3">
							<a asp-controller="Authentication" asp-action="Login" class="text-light text-decoration-none">
								<i class="fab fa-facebook me-1"></i>Facebook
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</footer>

	<!-- Scripts -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	@if (User.Identity.IsAuthenticated)
	{
		<script>
			// Load notification count on page load
			$(document).ready(function() {
				loadNotificationCount();
				
				// Refresh notification count every 30 seconds
				setInterval(loadNotificationCount, 30000);
			});

			function loadNotificationCount() {
				$.get('/Notification/GetUnreadCount')
					.done(function(data) {
						var count = data.count || 0;
						var badge = $('#notificationCount');
						
						if (count > 0) {
							badge.text(count > 99 ? '99+' : count);
							badge.show();
						} else {
							badge.hide();
						}
					})
					.fail(function() {
						console.log('Failed to load notification count');
					});
			}
		</script>
	}

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
