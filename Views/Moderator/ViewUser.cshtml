@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model PBL3.ViewModels.Moderator.ViewUserViewModel
@{
    ViewData["Title"] = Localizer["User Information"];
}
<link rel="stylesheet" href="~/css/ViewUser.css" />
<div class="view-user-container mt-5">
    <!-- Section 1: User Profile -->
    <section class="user-profile-section card mb-4">
        <div class="card-header"><h4>@Localizer["User Information"]</h4></div>
        <div class="card-body d-flex align-items-center">
            <img src="@Model.userProfile.Avatar" class="user-avatar me-4" alt="@Localizer["Avatar"]" />
            <div>
                <h5>@Model.userProfile.DisplayName</h5>
                <p>@Localizer["Email"]: @Model.userProfile.Email</p>
                <p>@Localizer["Role"]: @Model.userProfile.Role</p>
                <p>@Localizer["Created At"]: @Model.userProfile.CreatedAt.ToString("dd/MM/yyyy")</p>
                <p>@Localizer["Status"]: <span class="badge bg-info">@Model.userProfile.Status</span></p>
                <p>@Localizer["Warnings"]: <span class="badge bg-warning">@Model.userProfile.TotalWarning</span></p>
            </div>
        </div>
    </section>
    <!-- N√∫t thao t√°c cho moderator -->
    <section class="mb-4">
        @if (Model.userProfile.Status == PBL3.Models.UserModel.UserStatus.Active)
        {
            if (Model.userProfile.TotalWarning < 2)
            {
                <button type="button" class="btn btn-warning me-2" data-bs-toggle="modal" data-bs-target="#warnModal">‚ö†Ô∏è @Localizer["Warn"]</button>
                <!-- Modal c·∫£nh c√°o -->
                <div class="modal fade" id="warnModal" tabindex="-1" aria-labelledby="warnModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <form asp-action="WarnUser" asp-controller="Moderator" method="post">
                        <div class="modal-header">
                          <h5 class="modal-title" id="warnModalLabel">@Localizer["Enter Warning Reason"]</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <input type="hidden" name="id" value="@Model.userProfile.UserID" />
                          <textarea name="message" class="form-control" placeholder="@Localizer["Warning Placeholder"]" required rows="3"></textarea>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                          <button type="submit" class="btn btn-warning">@Localizer["Send Warning"]</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
            }
            <form asp-action="BanUser" asp-controller="Moderator" method="post" class="d-inline" onsubmit="return confirm('@Localizer["Ban Confirmation"]');">
                <input type="hidden" name="id" value="@Model.userProfile.UserID" />
                <input type="hidden" name="message" value="@Localizer["Ban Message"]" />
                <button type="submit" class="btn btn-danger">üö´ @Localizer["Ban Account"]</button>
            </form>
        }
        @if(Model.userProfile.Status == PBL3.Models.UserModel.UserStatus.Banned)
        {
            <form asp-action="UnbanUser" asp-controller="Moderator" method="post" class="d-inline" onsubmit="return confirm('@Localizer["Unban Confirmation"]');">
                <input type="hidden" name="id" value="@Model.userProfile.UserID" />
                <input type="hidden" name="message" value="@Localizer["Unban Message"]" />
                <button type="submit" class="btn btn-success">‚úîÔ∏è @Localizer["Unban Account"]</button>
            </form>

        }
    </section>
    <!-- Section 2: User Stories -->
    <section class="user-stories-section card mb-4">
        <div class="card-header"><h4>@Localizer["Posted Stories"]</h4></div>
        <div class="card-body">
            @if (Model.userStories.Any())
            {
                <div class="row">
                    @foreach (var story in Model.userStories)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="story-card card h-100">
                                <a href="@Url.Action("View", "Story", new { id = story.StoryID })" target="_blank">
                                    <img src="@story.Cover" class="card-img-top story-cover" alt="@Localizer["Cover"]" />
                                </a>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="@Url.Action("View", "Story", new { id = story.StoryID })" target="_blank">@story.Title</a>
                                    </h5>
                                    <p>@string.Format(Localizer["Chapters Count"].Value, story.TotalChapters)</p>
                                    <p>@string.Format(Localizer["Updated"].Value, story.LastUpdated?.ToString("dd/MM/yyyy"))</p>
                                    <span class="badge bg-secondary">@story.Status</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">@Localizer["No Stories"]</p>
            }
        </div>
    </section>
    <!-- Section 3: User Comments -->
    <section class="user-comments-section card mb-4">
        <div class="card-header"><h4>@Localizer["Comments"]</h4></div>
        <div class="card-body">
            @if (Model.UserComments.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Localizer["Content"]</th>
                            <th>@Localizer["Story/Chapter"]</th>
                            <th>@Localizer["Created At"]</th>
                            <th>@Localizer["Status"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model.UserComments)
                        {
                            <tr>
                                <td>@c.Content</td>
                                <td>@(c.StoryID != null ? $"Story #{c.StoryID}" : (c.ChapterID != null ? $"Chapter #{c.ChapterID}" : ""))</td>
                                <td>@c.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@(c.IsDeleted ? @Localizer["Processed"] : @Localizer["Unprocessed"])</td>
                                <td>
                                    <a href="@(c.ChapterID != null 
                                        ? Url.Action("ReadChapter", "Chapter", new { id = c.ChapterID }) + "#comment-" + c.CommentID 
                                        : c.StoryID != null 
                                            ? Url.Action("View", "Story", new { id = c.StoryID }) + "#comment-" + c.CommentID 
                                            : "#")" 
                                        class="btn btn-outline-primary btn-sm" target="_blank">
                                        @Localizer["Go to Comment"]
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">@Localizer["No Comments"]</p>
            }
        </div>
    </section>
    <!-- Section 4: Reports Created -->
    <section class="reports-created-section card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h4 class="mb-0">@Localizer["Reports Created"]</h4>
            <a href="@Url.Action("Index", "Report")" class="text-secondary ms-2" title="@Localizer["Reports Created"]">
                <i class="bi bi-gear-fill" style="font-size:1.3rem;"></i>
            </a>
        </div>
        <div class="card-body">
            @if (Model.ReportsCreated.Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>@Localizer["Type"]</th>
                            <th>@Localizer["Target"]</th>
                            <th>@Localizer["Reason"]</th>
                            <th>@Localizer["Created At"]</th>
                            <th>@Localizer["Status"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.ReportsCreated)
                        {
                            <tr>
                                <td>@r.ReportType</td>
                                <td>@(r.StoryID != null ? $"Story #{r.StoryID}" : r.ChapterID != null ? $"Chapter #{r.ChapterID}" : r.CommentID != null ? $"Comment #{r.CommentID}" : r.ReportedUserID != null ? $"User #{r.ReportedUserID}" : @Localizer["Other"])</td>
                                <td>@r.Reason</td>
                                <td>@r.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@(r.Status ? @Localizer["Processed"] : @Localizer["Unprocessed"])</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">@Localizer["No Comments"]</p>
            }
        </div>
    </section>
    <!-- Section 5: Reports Received -->
    <section class="reports-received-section card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h4 class="mb-0">@Localizer["Reports Received"]</h4>
            <a href="@Url.Action("Index", "Report")" class="text-secondary ms-2" title="@Localizer["Reports Received"]">
                <i class="bi bi-gear-fill" style="font-size:1.3rem;"></i>
            </a>
        </div>
        <div class="card-body">
            @if (Model.ReportsReceived.Any())
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>@Localizer["Type"]</th>
                            <th>@Localizer["Target"]</th>
                            <th>@Localizer["Reason"]</th>
                            <th>@Localizer["Created At"]</th>
                            <th>@Localizer["Status"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.ReportsReceived)
                        {
                            <tr>
                                <td>@r.ReportType</td>
                                <td>@(r.StoryID != null ? $"Story #{r.StoryID}" : r.ChapterID != null ? $"Chapter #{r.ChapterID}" : r.CommentID != null ? $"Comment #{r.CommentID}" : r.ReportedUserID != null ? $"User #{r.ReportedUserID}" : @Localizer["Other"])</td>
                                <td>@r.Reason</td>
                                <td>@r.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@(r.Status ? @Localizer["Processed"] : @Localizer["Unprocessed"])</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">@Localizer["No Comments"]</p>
            }
        </div>
    </section>
</div>
@section Scripts {
}
<script src="~/js/ViewUser.js"></script>
